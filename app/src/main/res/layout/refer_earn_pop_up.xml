                    <!--app:srcCompat="@drawable/ic_cancel_icon"-->
                    <!--android:id="@+id/cancel_imageView"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:layout_marginTop="@dimen/five"-->
                    <!--android:layout_marginRight="@dimen/five"-->
                    <!--android:contentDescription="TODO"/>-->

        <!--</FrameLayout>-->

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/frameLayout">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                app:srcCompat="@drawable/referandearn"
                   />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_cancel_icon"
                    android:id="@+id/cancel_imageView"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:contentDescription="TODO"/>

        </FrameLayout>

        <TextView
                android:text="@string/refer_and_earn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/fifteen"
                android:textSize="@dimen/text_size_eighteen"
                android:textColor="@color/lighter_black"
                android:textStyle="bold"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="115dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/discount"
                android:layout_margin="@dimen/fifteen"
                android:id="@+id/linearLayout4">

        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:background="@color/lighter_grey"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/sixty"
                android:layout_marginRight="@dimen/sixty"/>

        <Button
                android:text="@string/refer_now"
                android:layout_width="0dp"
                android:layout_height="@dimen/forty"
                android:id="@+id/refer_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_sixteen"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="@dimen/thirty"
                android:layout_marginRight="@dimen/thirty"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginBottom="@dimen/fifteen"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>