<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/five"
    android:layout_marginTop="@dimen/ten"
    android:layout_marginBottom="@dimen/five"
    android:layout_marginLeft="@dimen/fifteen"
    android:layout_marginRight="@dimen/fifteen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        android:id="@+id/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginBottom="@dimen/fifteen"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/text_size_eighteen"
                android:textColor="@color/lighter_black"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/allorder_order_date"
                    android:textSize="@dimen/text_size_twelve"
                    android:textColor="@color/lighter_black"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/orderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_date"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_twelve"
                    android:textColor="@color/lighter_black"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_ten"
                    android:textColor="@color/lighter_black"
                    android:textStyle="italic"
                    android:background="@color/lightest_grey"
                    android:paddingLeft="@dimen/ten"
                    android:paddingRight="@dimen/ten"
                    android:paddingTop="@dimen/two"
                    android:paddingBottom="@dimen/two"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/allorder_ppackage_amount"
                    android:textSize="@dimen/text_size_twelve"
                    android:textColor="@color/lighter_black"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/orderAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_amount"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_twelve"
                    android:textColor="@color/lighter_black"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="@dimen/fifteen"
                    android:layout_height="@dimen/fifteen"
                    android:layout_toLeftOf="@+id/tv_status"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>

                <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_twelve"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>