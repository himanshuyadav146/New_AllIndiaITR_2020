<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/white">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true" android:id="@+id/scrollView2"
            android:layout_marginBottom="@dimen/ten"
            app:layout_constraintBottom_toTopOf="@+id/cont_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/thirty"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/thirty">

                <TextView
                        android:text="@string/important_details_father"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                        android:textColor="@color/lighter_black"
                        android:textSize="@dimen/text_size_twelve"
                        android:layout_marginTop="@dimen/five"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/fatherNameField"
                        android:background="@drawable/text_field"
                        android:padding="@dimen/twelve"
                        android:textColor="@color/lighter_black"
                        android:textSize="@dimen/text_size_twelve"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout8"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/thirty"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/thirty"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                        android:text="@string/important_details_aadhar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView21"
                        android:layout_marginTop="@dimen/five"
                        android:textColor="@color/lighter_black"
                        android:textSize="@dimen/text_size_twelve"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/aadhaarField"
                        android:background="@drawable/text_field"
                        android:padding="@dimen/twelve"
                        android:textColor="@color/lighter_black"
                        android:textSize="@dimen/text_size_twelve"
                        android:maxLength="28"/>

            </LinearLayout>

            <TextView
                    android:text="@string/important_details_currentadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_sixteen"
                    android:textColor="@color/lighter_black"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/thirty"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/thirty"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
                    android:layout_marginTop="@dimen/twenty"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout10"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/thirty"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/thirty"
                    app:layout_constraintTop_toBottomOf="@+id/textView22"
                    android:layout_marginTop="8dp">

                <TextView
                        android:text="@string/important_details_add1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView23"
                        android:textColor="@color/lighter_black"
                        android:textSize="@dimen/text_size_twelve"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/addOneField"
                        android:background="@drawable/text_field"
                        android:padding="@dimen/twelve"
                        android:textColor="@color/lighter_black"
                        android:textSize="@dimen/text_size_twelve"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout13"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/thirty"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/thirty"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

                <TextView
                        android:text="@string/important_details_add2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView24"
                        android:textColor="@color/lighter_black"
                        android:textSize="@dimen/text_size_twelve"
                        android:layout_marginTop="@dimen/five"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/addTwoField"
                        android:background="@drawable/text_field"
                        android:padding="@dimen/twelve"
                        android:textSize="@dimen/text_size_twelve"
                        android:textColor="@color/lighter_black"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:id="@+id/linearLayout6"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/thirty" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/thirty"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginRight="@dimen/two">

                    <TextView
                            android:text="@string/important_details_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_twelve"
                            android:textColor="@color/lighter_black"
                            android:layout_marginTop="@dimen/five"/>

                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/forty"
                            android:inputType="textCapSentences"
                            android:ems="10"
                            android:id="@+id/stateSpinner"
                            android:background="@drawable/bg_spinner"
                            android:textSize="@dimen/text_size_twelve"
                            android:textColor="@color/lighter_black"
                            android:padding="5dp"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="@dimen/two">

                    <TextView
                            android:text="@string/important_details_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_twelve"
                            android:textColor="@color/lighter_black"
                            android:layout_marginTop="@dimen/five"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/forty"
                            android:inputType="textCapSentences"
                            android:ems="10"
                            android:id="@+id/cityField"
                            android:background="@drawable/text_field"
                            android:textSize="@dimen/text_size_twelve"
                            android:textColor="@color/lighter_black"
                            android:padding="@dimen/twelve"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout14"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/thirty"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/thirty"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout6">
                <TextView
                        android:text="@string/important_details_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView25"
                        android:layout_marginTop="@dimen/five" android:textColor="@color/lighter_black"
                        android:textSize="@dimen/text_size_twelve"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/pinCodeField" android:background="@drawable/text_field"
                        android:padding="@dimen/twelve" android:textColor="@color/lighter_black"
                        android:textSize="@dimen/text_size_twelve" android:maxLength="6"
                        android:layout_marginBottom="@dimen/twenty"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <Button
            android:text="@string/cont"
            android:layout_width="0dp"
            android:layout_height="@dimen/forty"
            android:id="@+id/cont_button"
            android:background="@drawable/button_background"
            android:textAllCaps="false" android:textColor="@color/white"
            android:textSize="@dimen/text_size_fourteen"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/fifteen" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/fifteen" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/ten"
    />

</androidx.constraintlayout.widget.ConstraintLayout>